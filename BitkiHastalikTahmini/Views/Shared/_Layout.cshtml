@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Dr.PlantAI - Bitki hastalıklarını yapay zeka ile tespit edin.">
    <meta name="author" content="Dr.PlantAI Team">
    <meta name="keywords" content="bitki hastalığı, yapay zeka, tarım, Dr.PlantAI, görüntü işleme">
    <title>@ViewData["Title"] - Dr.PlantAI</title>

    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-y5q4y5X5rD7iXkJ+UAGGswltZ3Qf3MxRXYW6UdW+o9IoCwPRj5Xj5uSijwz9PYFVvh2wZhv68szZgHYq1cvLwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding-top: 70px; /* Add padding equal to header height */
            background-color: #f4f6f8;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ffffff;
            padding: 1rem 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            position: fixed; /* Changed from sticky to fixed */
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
        }

        .header-left h1 {
            font-size: 1.6rem;
            color: #4CAF50;
            font-weight: 700;
            display: flex;
            align-items: center;
        }

            .header-left h1::before {
                content: "🌿";
                font-size: 1.5rem;
                margin-right: 8px;
            }

        .header-right a {
            background-color: #4CAF50;
            color: white;
            padding: 8px 14px;
            border-radius: 24px;
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background-color 0.3s ease;
        }

            .header-right a:hover {
                background-color: #45a049;
            }

        /* CONTAINER & LAYOUT */
        .container {
            display: flex;
            min-height: calc(100vh - 140px); /* Adjusted to account for header and footer */
        }

        .sidebar {
            width: 220px;
            background-color: #2c3e50;
            color: white;
            padding: 1rem;
        }

            .sidebar h2 {
                margin-top: 0;
            }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
        }

        .sidebar-nav li {
            margin: 10px 0;
        }

        .sidebar-nav a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.2s ease-in-out;
        }

            .sidebar-nav a i {
                margin-right: 10px;
            }

            .sidebar-nav a:hover {
                color: #4CAF50;
            }

        .sidebar-nav .active a {
            font-weight: bold;
            color: #4CAF50;
        }

        .content {
            flex-grow: 1;
            padding: 2rem;
            background-color: #ffffff;
        }

        /* FOOTER */
        .footer {
            background-color: #2c3e50;
            color: white;
            text-align: center;
            padding: 1rem;
        }

        .footer-content p {
            margin: 5px 0;
        }
    </style>
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="header-left">
            <h1>Dr.PlantAI</h1>
        </div>
        <div class="header-right">
            <a href="/Abone_Login"><i class="fas fa-user-circle"></i> Hesabım</a>
        </div>
    </header>

    <!-- ANA İÇERİK -->
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Menü</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")">
                        <a href="/User"><i class="fas fa-home"></i> Anasayfa</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
                        <a href="/Abone_Login"><i class="fas fa-user"></i> Profil</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active" : "")">
                        <a href="/About"><i class="fas fa-info-circle"></i> Hakkında</a>
                    </li>
                    <li>
                        <a href="/AdminLogin"><i class="fas fa-lock"></i> Admin Girişi</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Sayfa İçeriği -->
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer-content">
            <p>Bitkilerinizin sağlığı bizim önceliğimizdir.</p>
            <p>© <span id="currentYear"></span> Dr.PlantAI</p>
        </div>
    </footer>

    <!-- JS -->
    <script>
        document.getElementById("currentYear").textContent = new Date().getFullYear();
    </script>
    <script src="@Url.Content("~/js/script.js")"></script>
</body>
</html>