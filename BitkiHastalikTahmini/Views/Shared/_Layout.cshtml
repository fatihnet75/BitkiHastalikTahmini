@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dr.PlantAI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --header-height: 70px;
            --sidebar-width: 220px;
            --collapsed-sidebar-width: 70px;
            --primary-color: #4CAF50;
            --dark-color: #2c3e50;
            --light-color: #f4f6f8;
            --transition-speed: 0.3s;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--light-color);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ffffff;
            padding: 1rem 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: var(--header-height);
            z-index: 100;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .header-left h1 {
                font-size: 1.6rem;
                color: var(--primary-color);
                font-weight: 700;
            }

        .toggle-btn {
            background: none;
            border: none;
            color: var(--dark-color);
            font-size: 1.2rem;
            cursor: pointer;
        }

        /* SIDEBAR */
        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--dark-color);
            color: white;
            padding: 1.5rem 1rem;
            position: fixed;
            top: var(--header-height);
            left: 0;
            bottom: 0;
            transition: width var(--transition-speed) ease;
        }

            .sidebar.collapsed {
                width: var(--collapsed-sidebar-width);
            }

                .sidebar.collapsed .sidebar-nav a span {
                    display: none;
                }

        .sidebar-nav a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 0.6rem 0.8rem;
            border-radius: 6px;
            margin-bottom: 0.5rem;
        }

            .sidebar-nav a:hover {
                background-color: rgba(255,255,255,0.1);
            }

            .sidebar-nav a i {
                margin-right: 10px;
                width: 24px;
                text-align: center;
            }

        /* CONTENT */
        .content {
            margin-left: var(--sidebar-width);
            padding: 2rem;
            margin-top: var(--header-height);
            min-height: calc(100vh - var(--header-height));
            background-color: white;
            transition: margin-left var(--transition-speed) ease;
        }

            .content.expanded {
                margin-left: var(--collapsed-sidebar-width);
            }

        /* FOOTER */
        .footer {
            background-color: var(--dark-color);
            color: white;
            text-align: center;
            padding: 1rem;
            margin-left: var(--sidebar-width);
            transition: margin-left var(--transition-speed) ease;
        }

            .footer.expanded {
                margin-left: var(--collapsed-sidebar-width);
            }

        /* MEDIA QUERIES */
        @@media (max-width: 768px) {
            .sidebar {
                width: var(--collapsed-sidebar-width);
            }

                .sidebar .sidebar-nav a span {
                    display: none;
                }

            .content, .footer {
                margin-left: var(--collapsed-sidebar-width);
            }
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <div class="header-left">
            <button class="toggle-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1>Dr.PlantAI</h1>
        </div>
    </header>

    <!-- MAIN CONTAINER -->
    <div class="main-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="/User"><i class="fas fa-home"></i> <span>Anasayfa</span></a></li>
                    <li><a href="/Abone_Login"><i class="fas fa-user"></i> <span>Profil</span></a></li>
                    <li><a href="/About"><i class="fas fa-info-circle"></i> <span>Hakkında</span></a></li>
                    <li><a href="/AdminLogin"><i class="fas fa-lock"></i> <span>Admin Girişi</span></a></li>
                </ul>
            </nav>
        </aside>

        <!-- Page Content -->
        <main class="content" id="mainContent">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer" id="mainFooter">
        <p>© <span id="currentYear"></span> Dr.PlantAI</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Yıl bilgisi
            document.getElementById("currentYear").textContent = new Date().getFullYear();

            // Toggle butonu
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                const sidebar = document.getElementById('sidebar');
                const content = document.getElementById('mainContent');
                const footer = document.getElementById('mainFooter');

                sidebar.classList.toggle('collapsed');
                content.classList.toggle('expanded');
                footer.classList.toggle('expanded');
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>