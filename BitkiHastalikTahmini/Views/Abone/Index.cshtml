@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Genel Stil */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f3f4f8;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .analysis-buttons {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 80px;
        flex-wrap: wrap;
    }

    .analysis-choice-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 25px 35px;
        border-radius: 20px;
        width: 280px;
        text-align: center;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        cursor: pointer;
        transition: all 0.4s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .analysis-choice-button h3 {
            margin-bottom: 15px;
            font-size: 20px;
            font-weight: 700;
            text-transform: uppercase;
        }

        .analysis-choice-button p {
            margin-bottom: 12px;
            font-size: 14px;
            font-weight: 400;
            opacity: 0.9;
        }

        .analysis-choice-button small {
            font-size: 13px;
            color: #f1f1f1;
        }

        .analysis-choice-button::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            transition: all 0.4s ease;
            z-index: 1;
        }

        .analysis-choice-button:hover {
            background-color: #45a049;
            transform: translateY(-5px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
        }

            .analysis-choice-button:hover::after {
                background: rgba(0, 0, 0, 0.2);
            }

        .analysis-choice-button h3, .analysis-choice-button p, .analysis-choice-button small {
            z-index: 2;
        }

    /* Panel ve form stilleri */
    .analysis-panel {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .analysis-content {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 20px;
        width: 90%;
        max-width: 700px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        transform: scale(0.9);
        animation: showPanel 0.3s forwards;
    }



    {
        opacity: 0;
        transform: scale(0.9);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }

    }

    .close-button {
        background-color: transparent;
        border: none;
        font-size: 32px;
        color: #333;
        cursor: pointer;
        position: absolute;
        top: 20px;
        right: 20px;
        transition: all 0.3s ease;
    }

        .close-button:hover {
            color: #f44336;
            transform: scale(1.2);
        }

    .analysis-form {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 16px;
            margin-bottom: 10px;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 12px;
            transition: border-color 0.3s ease;
        }

            .form-group input:focus {
                border-color: #4CAF50;
                outline: none;
            }

    .analyze-button {
        background-color: #4CAF50;
        color: white;
        padding: 14px 30px;
        border-radius: 12px;
        border: none;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .analyze-button:hover {
            background-color: #45a049;
        }

    .result-container {
        margin-top: 20px;
        display: none;
        font-size: 18px;
        color: #333;
    }

        .result-container h3 {
            font-size: 22px;
            font-weight: 700;
            color: #4CAF50;
            margin-bottom: 15px;
        }

        .result-container p {
            font-size: 16px;
            color: #555;
        }

    .image-preview {
        margin-top: 15px;
        width: 100%;
        height: 200px;
        border: 2px dashed #ddd;
        background-color: #f7f7f7;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 12px;
    }

        .image-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .image-preview p {
            font-size: 16px;
            color: #aaa;
        }
</style>

<div class="analysis-buttons">
    <button class="analysis-choice-button" onclick="toggleSection('soil')">
        <h3>Toprak Hastalık Analizi</h3>
        <p>pH, nem ve gübre değerlerini girerek analiz yapın</p>
        <small class="trials-left" id="soilTrials">Kalan deneme: 2</small>
    </button>
    <button class="analysis-choice-button" onclick="toggleSection('image')">
        <h3>Görüntü ile Hastalık Tespiti</h3>
        <p>Bitki fotoğrafı yükleyerek hastalık analizi yapın</p>
        <small class="trials-left" id="imageTrials">Kalan deneme: 2</small>
    </button>
</div>

<!-- Toprak Paneli -->
<div id="soilPanel" class="analysis-panel soil-panel" style="display: none;">
    <div class="analysis-content">
        <button class="close-button" onclick="toggleSection('soil')">×</button>
        <div class="analysis-form">
            <h2>Toprak Hastalık Analizi</h2>
            <form id="soilForm" onsubmit="handleSoilAnalysis(event)">
                <div class="form-group">
                    <label for="ph">pH Değeri:</label>
                    <input type="number" step="0.1" name="ph" placeholder="6.0-8.0 arası bir değer girin" required>
                </div>
                <div class="form-group">
                    <label for="moisture">Nem Oranı (%):</label>
                    <input type="number" name="moisture" placeholder="0-100 arası bir değer girin" required>
                </div>
                <div class="form-group">
                    <label for="fertilizer">Gübre Miktarı (kg/m²):</label>
                    <input type="number" step="0.1" name="fertilizer" placeholder="Gübre miktarını girin" required>
                </div>
                <button type="submit" class="analyze-button">Analiz Et</button>
            </form>
        </div>
        <div id="soilResult" class="result-container" style="display: none;">
            <h3>Analiz Sonucu</h3>
            <p id="soilResultText"></p>
        </div>
    </div>
</div>

<!-- Görüntü Paneli -->
<div id="imagePanel" class="analysis-panel image-panel" style="display: none;">
    <div class="analysis-content">
        <button class="close-button" onclick="toggleSection('image')">×</button>
        <div class="analysis-form">
            <h2>Görüntü ile Hastalık Tespiti</h2>
            <form id="imageForm" onsubmit="handleImageAnalysis(event)">
                <div class="form-group">
                    <label for="imageUpload">Bitki Fotoğrafı:</label>
                    <input type="file" id="imageUpload" accept="image/*" onchange="handleImageChange(event)" required>
                    <div id="imagePreview" class="image-preview">
                        <p>Görsel Yüklenmedi</p>
                    </div>
                </div>
                <button type="submit" class="analyze-button">Analiz Et</button>
            </form>
        </div>
        <div id="imageResult" class="result-container" style="display: none;">
            <h3>Analiz Sonucu</h3>
            <p id="imageResultText"></p>
        </div>
    </div>
</div>
