@{
    ViewData["Title"] = "Analiz Sayfası - Premium";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Genel Stil */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f3f4f8;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .premium-page-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .premium-header {
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }

        .premium-header h1 {
            font-size: 32px;
            color: #333;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }

            .premium-header h1:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background-color: #4CAF50;
                border-radius: 2px;
            }

        .premium-header p {
            font-size: 18px;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
        }

    /* Analiz Kartları */
    .analysis-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 50px;
    }

    .analysis-card {
        background: #fff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        position: relative;
    }

        .analysis-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        padding: 25px;
        background: linear-gradient(135deg, #4CAF50, #2E7D32);
        color: white;
        text-align: center;
    }

        .card-header h3 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
        }

    .card-icon {
        font-size: 48px;
        margin-bottom: 15px;
    }

    .card-body {
        padding: 25px;
        text-align: center;
    }

        .card-body p {
            color: #666;
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 25px;
        }

    .feature-list {
        text-align: left;
        padding-left: 20px;
        margin-bottom: 30px;
    }

        .feature-list li {
            margin-bottom: 10px;
            position: relative;
            padding-left: 25px;
            color: #555;
        }

            .feature-list li:before {
                content: '\f00c';
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                color: #4CAF50;
            }

    .premium-tag {
        position: absolute;
        top: 20px;
        right: 20px;
        background: #FFD700;
        color: #333;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .lock-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: white;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .analysis-card:hover .lock-overlay {
        opacity: 1;
    }

    .lock-icon {
        font-size: 48px;
        margin-bottom: 15px;
    }

    .subscribe-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
    }

        .subscribe-button:hover {
            background-color: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    /* Abonelik Bilgisi */
    .subscription-info {
        background: linear-gradient(135deg, #333, #222);
        color: white;
        border-radius: 20px;
        padding: 30px;
        margin-top: 60px;
        text-align: center;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

        .subscription-info h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #4CAF50;
        }

        .subscription-info p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 30px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

    .subscription-plans {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
        margin-top: 30px;
    }

    .plan-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 25px;
        width: 250px;
        transition: all 0.3s ease;
    }

        .plan-card:hover {
            transform: scale(1.05);
            background: rgba(255, 255, 255, 0.15);
        }

    .plan-title {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 15px;
        color: #fff;
    }

    .plan-price {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #4CAF50;
    }

        .plan-price span {
            font-size: 16px;
            opacity: 0.8;
        }

    .plan-features {
        text-align: left;
        margin-bottom: 25px;
        padding-left: 0;
        list-style-type: none;
    }

        .plan-features li {
            margin-bottom: 10px;
            position: relative;
            padding-left: 25px;
        }

            .plan-features li:before {
                content: '\f00c';
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                color: #4CAF50;
            }

    .plan-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-block;
        width: 80%;
    }

        .plan-button:hover {
            background-color: #45a049;
        }

   

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }
</style>

