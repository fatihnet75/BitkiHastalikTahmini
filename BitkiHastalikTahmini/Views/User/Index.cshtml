<script>
    // Panel açma/kapama fonksiyonu
    function toggleSection(section) {
        const panel = document.getElementById(`${section}Panel`);
        const isOpen = panel.style.display === 'flex';

        // Tüm panelleri kapat
        document.querySelectorAll('.analysis-panel').forEach(p => {
            p.style.display = 'none';
        });

        // Eğer panel kapalıysa aç
        if (!isOpen) {
            panel.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // Sayfa kaydırmayı engelle
        } else {
            document.body.style.overflow = ''; // Sayfa kaydırmayı geri aç
        }
    }

    // Toprak analizi form gönderimi
    function handleSoilAnalysis(event) {
        event.preventDefault();

        // Form verilerini al
        const formData = new FormData(event.target);
        const ph = parseFloat(formData.get('ph'));
        const moisture = parseInt(formData.get('moisture'));
        const fertilizer = parseFloat(formData.get('fertilizer'));

        // Demo analiz sonucu oluştur
        let resultText = "";
        let isHealthy = true;

        // pH kontrolü
        if (ph < 6.0 || ph > 8.0) {
            resultText += `pH değeriniz ${ph} ile optimal aralıkta değil (6.0-8.0). `;
            isHealthy = false;
        }

        // Nem kontrolü
        if (moisture < 30) {
            resultText += `Nem oranınız %${moisture} ile çok düşük. `;
            isHealthy = false;
        } else if (moisture > 70) {
            resultText += `Nem oranınız %${moisture} ile çok yüksek. `;
            isHealthy = false;
        }

        // Gübre kontrolü
        if (fertilizer < 0.5) {
            resultText += `Gübre miktarınız ${fertilizer} kg/m² ile yetersiz. `;
            isHealthy = false;
        } else if (fertilizer > 2.0) {
            resultText += `Gübre miktarınız ${fertilizer} kg/m² ile aşırı. `;
            isHealthy = false;
        }

        // Sonuç
        if (isHealthy) {
            resultText = "Toprak analizi sonuçlarına göre toprağınız sağlıklı görünüyor! Optimal pH, nem ve gübre seviyelerine sahipsiniz.";
        } else {
            resultText += "Bu koşullar bitki hastalıklarına yol açabilir. Toprak düzenleyici kullanmayı düşünebilirsiniz.";
        }

        // Sonucu göster
        document.getElementById('soilResultText').textContent = resultText;
        document.getElementById('soilResult').style.display = 'block';

        // Deneme hakkını azalt
        updateTrials('soil');
    }

    // Görüntü yükleme işlemi
    function handleImageChange(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('imagePreview');

        if (file) {
            const reader = new FileReader();

            reader.onload = function(e) {
                preview.innerHTML = `<img src="${e.target.result}" alt="Yüklenen görsel">`;
            }

            reader.readAsDataURL(file);
        } else {
            preview.innerHTML = '<p>Görsel Yüklenmedi</p>';
        }
    }

    // Görüntü analizi form gönderimi
    function handleImageAnalysis(event) {
        event.preventDefault();

        // Rastgele hastalık sonuçları (demo amaçlı)
        const diseases = [
            "Yaprak küfü",
            "Mildiyö",
            "Küllenme",
            "Bakteriyel leke",
            "Virüs enfeksiyonu"
        ];

        const treatments = [
            "Mantar ilacı uygulaması önerilir",
            "Etkilenen yaprakların temizlenmesi gerekir",
            "Hava sirkülasyonunu artırın",
            "Bakır bazlı ilaç kullanın",
            "Bitkiyi izole edin"
        ];

        const randomDisease = diseases[Math.floor(Math.random() * diseases.length)];
        const randomTreatment = treatments[Math.floor(Math.random() * treatments.length)];

        // Sonuç metni oluştur
        const resultText = `Analiz sonucu: Bitkinizde "${randomDisease}" tespit edildi. Önerilen tedavi: ${randomTreatment}`;

        // Sonucu göster
        document.getElementById('imageResultText').textContent = resultText;
        document.getElementById('imageResult').style.display = 'block';

        // Deneme hakkını azalt
        updateTrials('image');
    }

    // Deneme hakkını güncelleme
    function updateTrials(type) {
        const element = document.getElementById(`${type}Trials`);
        const currentText = element.textContent;
        const remaining = parseInt(currentText.match(/\d+/)[0]);

        if (remaining > 1) {
            element.textContent = `Kalan deneme: ${remaining - 1}`;
        } else {
            element.textContent = "Deneme hakkınız kalmadı";
            element.style.color = "#ff6b6b";

            // İlgili butonu devre dışı bırak
            document.querySelector(`.analysis-choice-button[onclick="toggleSection('${type}')"]`)
                .style.opacity = "0.6";
            document.querySelector(`.analysis-choice-button[onclick="toggleSection('${type}')"]`)
                .style.cursor = "not-allowed";
            document.querySelector(`.analysis-choice-button[onclick="toggleSection('${type}')"]`)
                .onclick = null;
        }
    }

    // Sayfa yüklendiğinde çalışacak kodlar
    document.addEventListener('DOMContentLoaded', function() {
        // Paneller dışına tıklandığında kapat
        document.querySelectorAll('.analysis-panel').forEach(panel => {
            panel.addEventListener('click', function(e) {
                if (e.target === panel) {
                    toggleSection(panel.id.replace('Panel', ''));
                }
            });
        });

        // FAQ açılır kapanır
        const faqItems = document.querySelectorAll('.faq-item');
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            question.addEventListener('click', () => {
                const isActive = item.classList.contains('active');

                // Tüm aktif öğeleri kapat
                faqItems.forEach(faqItem => {
                    faqItem.classList.remove('active');
                });

                // Tıklanan öğeyi aç (eğer zaten açık değilse)
                if (!isActive) {
                    item.classList.add('active');
                }
            });
        });
    });
</script>