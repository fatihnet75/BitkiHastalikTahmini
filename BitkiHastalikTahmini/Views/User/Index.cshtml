﻿@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Genel Stil */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: inherit;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .analysis-buttons {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 80px;
        flex-wrap: wrap;
    }

    .analysis-choice-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 25px 35px;
        border-radius: 20px;
        width: 280px;
        text-align: center;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        cursor: pointer;
        transition: all 0.4s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .analysis-choice-button h3 {
            margin-bottom: 15px;
            font-size: 20px;
            font-weight: 700;
            text-transform: uppercase;
        }

        .analysis-choice-button p {
            margin-bottom: 12px;
            font-size: 14px;
            font-weight: 400;
            opacity: 0.9;
        }

        .analysis-choice-button small {
            font-size: 13px;
            color: #f1f1f1;
        }

        .analysis-choice-button::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            transition: all 0.4s ease;
            z-index: 1;
        }

        .analysis-choice-button:hover {
            background-color: #45a049;
            transform: translateY(-5px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
        }

            .analysis-choice-button:hover::after {
                background: rgba(0, 0, 0, 0.2);
            }

        .analysis-choice-button h3, .analysis-choice-button p, .analysis-choice-button small {
            z-index: 2;
        }

    /* Panel ve form stilleri */
    .analysis-panel {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .analysis-content {
        background-color: inherit;
        padding: 40px;
        border-radius: 20px;
        width: 90%;
        max-width: 700px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        transform: scale(0.9);
        animation: showPanel 0.3s forwards;
    }

    0% {
        opacity: 0;
        transform: scale(0.9);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }



    .close-button {
        background-color: transparent;
        border: none;
        font-size: 32px;
        color: #333;
        cursor: pointer;
        position: absolute;
        top: 20px;
        right: 20px;
        transition: all 0.3s ease;
    }

        .close-button:hover {
            color: #f44336;
            transform: scale(1.2);
        }

    .analysis-form {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 16px;
            margin-bottom: 10px;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 12px;
            transition: border-color 0.3s ease;
        }

            .form-group input:focus {
                border-color: #4CAF50;
                outline: none;
            }

    .analyze-button {
        background-color: #4CAF50;
        color: white;
        padding: 14px 30px;
        border-radius: 12px;
        border: none;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .analyze-button:hover {
            background-color: #45a049;
        }

    .result-container {
        margin-top: 20px;
        display: none;
        font-size: 18px;
        color: #333;
    }

        .result-container h3 {
            font-size: 22px;
            font-weight: 700;
            color: #4CAF50;
            margin-bottom: 15px;
        }

        .result-container p {
            font-size: 16px;
            color: #555;
        }

    .image-preview {
        margin-top: 15px;
        width: 100%;
        height: 200px;
        border: 2px dashed #ddd;
        background-color: #f7f7f7;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 12px;
    }

        .image-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .image-preview p {
            font-size: 16px;
            color: #aaa;
        }

    /* Subscription Container Stilleri */
    .subscription-container {
        max-width: 1200px;
        margin: 60px auto;
        padding: 30px 20px;
    }

    .subscription-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .subscription-header h1 {
            font-size: 36px;
            color: #2c3e50;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }

            .subscription-header h1:after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, #4CAF50, #2E7D32);
                border-radius: 2px;
            }

        .subscription-header p {
            font-size: 18px;
            color: #555;
            max-width: 800px;
            margin: 20px auto 0;
            line-height: 1.6;
        }

    /* Plan Kartları */
    .plans-container {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .plan-card {
        background: inherit;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 350px;
        transition: all 0.4s ease;
        position: relative;
    }

        .plan-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .popular-tag {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #FFD700;
        color: #333;
        padding: 5px 15px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 14px;
        text-transform: uppercase;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        z-index: 10;
    }

    .plan-header {
        background: linear-gradient(135deg, #4CAF50, #2E7D32);
        padding: 30px 20px;
        color: white;
        text-align: center;
    }

    .basic-plan .plan-header {
        background: linear-gradient(135deg, #3498db, #2980b9);
    }

    .premium-plan .plan-header {
        background: linear-gradient(135deg, #4CAF50, #2E7D32);
    }

    .pro-plan .plan-header {
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
    }

    .plan-name {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .plan-price {
        font-size: 48px;
        font-weight: 700;
        margin: 20px 0 10px;
    }

        .plan-price span {
            font-size: 18px;
            opacity: 0.8;
        }

    .plan-billing {
        font-size: 14px;
        opacity: 0.8;
    }

    .plan-content {
        padding: 30px;
    }

    .plan-features {
        list-style-type: none;
        padding: 0;
        margin: 0 0 30px;
    }

        .plan-features li {
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            position: relative;
            padding-left: 30px;
            color: #555;
        }

            .plan-features li:before {
                content: '\f00c';
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                color: #4CAF50;
            }

    .basic-plan .plan-features li:before {
        color: #3498db;
    }

    .premium-plan .plan-features li:before {
        color: #4CAF50;
    }

    .pro-plan .plan-features li:before {
        color: #9b59b6;
    }

    .plan-features li.unavailable {
        color: #aaa;
        text-decoration: line-through;
    }

        .plan-features li.unavailable:before {
            content: '\f00d';
            color: #e74c3c;
        }

    .subscribe-btn {
        display: block;
        width: 100%;
        padding: 15px;
        background: #4CAF50;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        text-decoration: none;
    }

    .basic-plan .subscribe-btn {
        background: #3498db;
    }

    .premium-plan .subscribe-btn {
        background: #4CAF50;
    }

    .pro-plan .subscribe-btn {
        background: #9b59b6;
    }

    .subscribe-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    /* Özellikler Tablosu */
    .features-comparison {
        margin-top: 80px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .features-header {
        background: #2c3e50;
        color: white;
        padding: 20px 30px;
        text-align: center;
    }

        .features-header h2 {
            margin: 0;
            font-size: 24px;
        }

    .features-table {
        width: 100%;
        border-collapse: collapse;
    }

        .features-table th, .features-table td {
            padding: 15px 20px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        .features-table th {
            background: #f5f5f5;
            font-weight: 600;
            color: #333;
        }

            .features-table th:first-child {
                text-align: left;
            }

        .features-table td:first-child {
            text-align: left;
            font-weight: 500;
            color: #333;
        }

        .features-table i.fa-check {
            color: #4CAF50;
            font-size: 18px;
        }

        .features-table i.fa-times {
            color: #e74c3c;
            font-size: 18px;
        }

        .features-table td:nth-child(2) i.fa-check {
            color: #3498db;
        }

        .features-table td:nth-child(3) i.fa-check {
            color: #4CAF50;
        }

        .features-table td:nth-child(4) i.fa-check {
            color: #9b59b6;
        }

    /* Müşteri Görüşleri */
    .testimonials {
        margin-top: 80px;
        text-align: center;
    }

        .testimonials h2 {
            font-size: 28px;
            color: #2c3e50;
            margin-bottom: 40px;
            position: relative;
            display: inline-block;
        }

            .testimonials h2:after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, #4CAF50, #2E7D32);
                border-radius: 2px;
            }

    .testimonials-container {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .testimonial-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 25px;
        width: 300px;
        text-align: left;
    }

    .testimonial-content {
        position: relative;
        padding: 0 20px;
        font-style: italic;
        color: #555;
        line-height: 1.6;
    }

        .testimonial-content:before, .testimonial-content:after {
            content: '"';
            font-size: 50px;
            position: absolute;
            color: #4CAF50;
            opacity: 0.3;
        }

        .testimonial-content:before {
            top: -20px;
            left: 0;
        }

        .testimonial-content:after {
            bottom: -40px;
            right: 0;
        }

    .testimonial-author {
        display: flex;
        align-items: center;
        margin-top: 20px;
    }

        .testimonial-author img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
        }

    .author-info h4 {
        margin: 0;
        color: #333;
    }

    .author-info p {
        margin: 5px 0 0 0;
        color: #777;
        font-size: 14px;
    }

    /* FAQ Bölümü */
    .faq-section {
        margin-top: 80px;
    }

        .faq-section h2 {
            font-size: 28px;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 40px;
            position: relative;
            display: inline-block;
            left: 50%;
            transform: translateX(-50%);
        }

            .faq-section h2:after {
                content: '';
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, #4CAF50, #2E7D32);
                border-radius: 2px;
            }

    .faq-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .faq-item {
        background: #fff;
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .faq-question {
        padding: 20px;
        background: #f9f9f9;
        font-weight: 600;
        color: #333;
        cursor: pointer;
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .faq-question:after {
            content: '\f107';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            font-size: 20px;
            color: #4CAF50;
        }

    .faq-answer {
        padding: 0 20px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease, padding 0.3s ease;
    }

    .faq-item.active .faq-question:after {
        content: '\f106';
    }

    .faq-item.active .faq-answer {
        padding: 20px;
        max-height: 300px;
    }

    /* CTA Bölümü */
    .cta-section {
        margin: 80px 0 40px;
        text-align: center;
        background: linear-gradient(135deg, #4CAF50, #2E7D32);
        border-radius: 20px;
        padding: 50px 30px;
        color: white;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

        .cta-section h2 {
            font-size: 32px;
            margin-bottom: 20px;
        }

        .cta-section p {
            font-size: 18px;
            max-width: 700px;
            margin: 0 auto 30px;
            opacity: 0.9;
        }

    .cta-button {
        display: inline-block;
        background: white;
        color: #4CAF50;
        padding: 15px 40px;
        border-radius: 50px;
        font-size: 18px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

        .cta-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }


    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }



    .premium-plan {
        animation: pulse 2s infinite;
    }
</style>

<div class="analysis-buttons">
    <button class="analysis-choice-button" onclick="toggleSection('soil')">
        <h3>Toprak Hastalık Analizi</h3>
        <p>pH, nem ve gübre değerlerini girerek analiz yapın</p>
        <small class="trials-left" id="soilTrials">Kalan deneme: 2</small>
    </button>
    <button class="analysis-choice-button" onclick="toggleSection('image')">
        <h3>Görüntü ile Hastalık Tespiti</h3>
        <p>Bitki fotoğrafı yükleyerek hastalık analizi yapın</p>
        <small class="trials-left" id="imageTrials">Kalan deneme: 2</small>
    </button>
</div>

<!-- Toprak Paneli -->
<div id="soilPanel" class="analysis-panel soil-panel" style="display: none;">
    <div class="analysis-content">
        <button class="close-button" onclick="toggleSection('soil')">×</button>
        <div class="analysis-form">
            <h2>Toprak Hastalık Analizi</h2>
            <form id="soilForm" onsubmit="handleSoilAnalysis(event)">
                <div class="form-group">
                    <label for="ph">pH Değeri:</label>
                    <input type="number" step="0.1" name="ph" placeholder="6.0-8.0 arası bir değer girin" required>
                </div>
                <div class="form-group">
                    <label for="moisture">Nem Oranı (%):</label>
                    <input type="number" name="moisture" placeholder="0-100 arası bir değer girin" required>
                </div>
                <div class="form-group">
                    <label for="fertilizer">Gübre Miktarı (kg/m²):</label>
                    <input type="number" step="0.1" name="fertilizer" placeholder="Gübre miktarını girin" required>
                </div>
                <button type="submit" class="analyze-button">Analiz Et</button>
            </form>
        </div>
        <div id="soilResult" class="result-container" style="display: none;">
            <h3>Analiz Sonucu</h3>
            <p id="soilResultText"></p>
        </div>
    </div>
</div>

<!-- Görüntü Paneli -->
<div id="imagePanel" class="analysis-panel image-panel" style="display: none;">
    <div class="analysis-content">
        <button class="close-button" onclick="toggleSection('image')">×</button>
        <div class="analysis-form">
            <h2>Görüntü ile Hastalık Tespiti</h2>
            <form id="imageForm" onsubmit="handleImageAnalysis(event)">
                <div class="form-group">
                    <label for="imageUpload">Bitki Fotoğrafı:</label>
                    <input type="file" id="imageUpload" accept="image/*" onchange="handleImageChange(event)" required>
                    <div id="imagePreview" class="image-preview">
                        <p>Görsel Yüklenmedi</p>
                    </div>
                </div>
                <button type="submit" class="analyze-button">Analiz Et</button>
            </form>
        </div>
        <div id="imageResult" class="result-container" style="display: none;">
            <h3>Analiz Sonucu</h3>
            <p id="imageResultText"></p>
        </div>
    </div>
</div>

